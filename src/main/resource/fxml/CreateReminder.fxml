<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.stage.Stage?>

<AnchorPane prefHeight="300.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <VBox alignment="CENTER" layoutX="48.0" layoutY="28.0" spacing="10.0">
            <Label text="Create Reminder" style="-fx-font-family: 'Segoe UI'; -fx-font-size: 18;" />
            <HBox spacing="10.0">
                <Label text="Title" style="-fx-font-family: 'Segoe UI';" />
                <TextField fx:id="titleField" promptText="Enter title" style="-fx-font-family: 'Segoe UI';" />
            </HBox>
            <HBox spacing="10.0">
                <Label text="Note" style="-fx-font-family: 'Segoe UI';" />
                <TextArea fx:id="noteArea" promptText="Enter note" prefHeight="100.0" prefWidth="200.0" wrapText="true" style="-fx-font-family: 'Segoe UI';" />
            </HBox>
            <HBox spacing="10.0">
                <Label text="Due Date" style="-fx-font-family: 'Segoe UI';" />
                <DatePicker fx:id="dueDatePicker" style="-fx-font-family: 'Segoe UI';" />
            </HBox>
            <HBox spacing="10.0">
                <Button fx:id="saveButton" onAction="#saveReminder" text="Save" style="-fx-font-family: 'Segoe UI';" />
                <Button fx:id="cancelButton" onAction="#closePopup" text="Cancel" style="-fx-font-family: 'Segoe UI';" />
            </HBox>
        </VBox>
    </children>
</AnchorPane>
